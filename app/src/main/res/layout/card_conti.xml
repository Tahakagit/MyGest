<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="1dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="1dp"
        app:cardElevation="1dp"
        android:id="@id/cv_account_dashboard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/cardNomeconto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".70"


                    />

                <TextView
                    android:id="@+id/cardSaldoconto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="35sp"
                    android:layout_weight=".30"


                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hiddenlayout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/img_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"

                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    card_view:srcCompat="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/img_edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"

                    android:layout_weight="0.5"
                    android:adjustViewBounds="true"
                    android:cropToPadding="false"
                    card_view:srcCompat="@drawable/ic_edit" />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>