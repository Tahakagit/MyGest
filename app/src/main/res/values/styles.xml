<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_style_importo" parent="@android:style/TextAppearance.Medium"></style>

    <style name="text_style_scadenza" parent="@android:style/TextAppearance.Medium"></style>

    <style name="text_style_conto" parent="@android:style/TextAppearance.Medium"></style>

    <style name="text_style_tipo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#cccdce</item>

    </style>

    <style name="text_style_beneficiario" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>

    </style>

    <!--
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
-->

    <style name="MaterialButton" parent="Theme.AppCompat.Light">

        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
